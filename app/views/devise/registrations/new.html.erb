<div style="background:
  linear-gradient(
  rgba(35,43,85,0.75),
  rgba(35,43,85,0.95)),
  url(https://kuulpeeps.com/wp-content/uploads/2017/08/michael-jackson-xscape_wide-8d509ce1a8ad782dfc5b0e351a7d0deb3e844638.jpg) no-repeat center center;
background-size: cover; position: fixed; width: 100%; height: 100%;">
<div class="form">
  <div id="signup">
    <h1>Sign Up for Free</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="field-wrap">
          <%#= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>

        <div class="top-row">
          <div class="field-wrap">
            <%#= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
          </div>

          <div class="field-wrap">
            <%#= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
          </div>
      </div>

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>

      <div class="actions">
        <%= f.submit "Sign up", class:"button button-block" %>
      </div>
    <% end %>

  </div>
</div>
</div>
