<div style="background:
  linear-gradient(
  rgba(35,43,85,0.75),
  rgba(35,43,85,0.95)),
  url(https://kuulpeeps.com/wp-content/uploads/2017/08/michael-jackson-xscape_wide-8d509ce1a8ad782dfc5b0e351a7d0deb3e844638.jpg) no-repeat center center;
background-size: cover; position: fixed; width: 100%; height: 100%;">
<div class="form" id="login">
  <h1>Welcome Back!</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field-wrap">
      <%#= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field-wrap">
      <%#= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
    </div>
    <div class="checkbox-row">
      <div>
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me, id:"checkbox" %>
            <label for="checkbox" ><span class="ui"></span>Keep me signed in</label>
            <%#= f.label :remember_me %>
        <% end -%>
      </div>

      <div>
        <a href="#">Forgot Password?</a>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Log in", class:"button button-block" %>
    </div>
  <% end %>
</div>
</div>
